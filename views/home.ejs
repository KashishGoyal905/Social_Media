<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <title>Document</title>
</head>

<body>
    <div class="navbar">
        <div class="heading">
            <h1>Codeial</h1>
        </div>
        <div class="links">
            <h2><a href="/users/sign-in">Sign-In</a></h2>
            <h2><a href="/users/sign-up">Sign Up</a></h2>
            <h2><a href="/users/sign-out">Sign-Out</a></h2>
        </div>
    </div>
    <section id="post">
        <%if(locals.user){%>
            <h2>Create a Post: </h2>
            <form action="/posts/create-post" method="post">
                <textarea name="content" cols="60" rows="3" placeholder="enter your content here"></textarea>
                <button type="submit" id="postButton">Post</button>
            </form>
            <% } %>
    </section>
    <div class="container">

        <div class="posts">
            <h1>Posts-</h1>
            <ul>
                <% for(let post of posts) {%>
                    <li>
                        <h2>
                            <%=post.content%>
                                -<%=post.user.username%>
                                    <% if(locals.user && locals.user.id==post.user.id) {%>
                                        <a href="/posts/destroy/<%=post._id %>">X</a>
                                        <% } %>
                        </h2>

                        <div class="comments">
                            <%if(locals.user){%>
                                <form action="/comments/create-comment/<%=post._id %>" method="post">
                                    <textarea name="content" cols="30" rows="1"
                                        placeholder="enter your comment here"></textarea>
                                    <button type="submit">Comment</button>
                                </form>
                                <% } %>

                                    <div class="comment-list">
                                        <ul>
                                            <% for(let comment of post.comments) { %>
                                                <li>
                                                    <%= comment.content %>
                                                        <br>
                                                        <small>
                                                            --<%= comment.user.username %>
                                                        </small>
                                                        <% if(locals.user && locals.user.id==comment.user.id) {%>
                                                            <a href="/comments/destroy/<%=comment._id %>">X</a>
                                                            <% } %>
                                                </li>
                                                <% } %>
                                        </ul>
                                    </div>
                        </div>
                    </li>
                    <% } %>
            </ul>
        </div>


    </div>
</body>

</html>