<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>homee</h1>

    <section>
        <%if(locals.user){%>
            <form action="/posts/create-post" method="post">
                <textarea name="content" cols="40" rows="4" placeholder="enter your content here"></textarea>
                <button type="submit">Post</button>
            </form>
            <% } %>
    </section>

    <div class="posts">
        <h1>Posts-</h1>
        <ul>
            <% for(let post of posts) {%>
                <li>
                    <h2>
                        <%=post.content%>
                            -<%=post.user.username%>
                    </h2>

                    <div class="comments">

                        <%if(locals.user){%>
                            <form action="/comments/create-comment/<%=post._id %>" method="post">
                                <textarea name="content" cols="30" rows="1"
                                    placeholder="enter your comment here"></textarea>
                                <button type="submit">Comment</button>
                            </form>
                            <% } %>

                                <div class="comment-list">
                                    <ul>
                                        <% for(let comment of post.comments) { %>
                                            <li>
                                                <%= comment.content %>
                                                <br>
                                                <small> <%= comment.user.email %> </small>
                                            </li>
                                            <% } %>
                                    </ul>
                                </div>
                    </div>
                </li>
                <% } %>
        </ul>
    </div>
</body>

</html>